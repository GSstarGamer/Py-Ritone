{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pyritone.dev/protocol/bridge-protocol-v1.schema.json",
  "title": "Py-Ritone Bridge Envelope",
  "type": "object",
  "oneOf": [
    {
      "title": "Request",
      "type": "object",
      "required": ["type", "id", "method", "params"],
      "properties": {
        "type": { "const": "request" },
        "id": { "type": "string" },
        "method": { "type": "string" },
        "params": { "type": "object" }
      },
      "additionalProperties": true
    },
    {
      "title": "Response",
      "type": "object",
      "required": ["type", "id", "ok"],
      "properties": {
        "type": { "const": "response" },
        "id": { "type": "string" },
        "ok": { "type": "boolean" },
        "result": { "type": ["object", "null"] },
        "error": {
          "type": ["object", "null"],
          "properties": {
            "code": { "type": "string" },
            "message": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    {
      "title": "Event",
      "type": "object",
      "required": ["type", "event", "data", "ts"],
      "properties": {
        "type": { "const": "event" },
        "event": { "type": "string" },
        "data": { "type": "object" },
        "ts": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": true
    }
  ]
}
